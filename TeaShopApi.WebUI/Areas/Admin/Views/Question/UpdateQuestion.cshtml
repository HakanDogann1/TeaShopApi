@model UpdateQuestionDto
@{
    ViewData["Title"] = "UpdateQuestion";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<form method="post">
    <input type="hidden" asp-for="QuestionId"/>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label>Soruyu Yazınız</label>
            <input type="text" class="form-control" asp-for="QuestionDetail" placeholder="Kahve">
        </div>
    </div>
    <div class="form-row">
        2        <div class="form-group col-md-6">
            <label>Cevabı Yazınız</label>
            <input type="text" class="form-control" asp-for="AnswerDetail" placeholder="20">
        </div>
    </div>
    <button type="submit" class="btn  btn-primary">Ekle</button>
</form>




